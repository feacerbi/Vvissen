<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.vvissen.fragments.TripInfoFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:alpha="0.7"
            android:src="@drawable/ic_assignment_turned_in_black_24dp"/>

        <TextView
            android:id="@+id/tv_status_text"
            android:layout_width="0dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="72dp"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            tools:text="Pending"/>

        <View
            android:id="@+id/v_separator1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:layout_marginStart="72dp"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/iv_status_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_calendar_icon"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_separator1"
            android:layout_marginStart="16dp"
            android:alpha="0.7"
            android:src="@drawable/ic_date_range_white_24dp"/>

        <LinearLayout
            android:id="@+id/ll_calendar_from"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginStart="72dp"
            app:layout_constraintTop_toTopOf="@id/iv_calendar_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_calendar_from_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="start|center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/colorAccent"
                android:alpha="0.7"
                android:text="check in"/>

            <TextView
                android:id="@+id/tv_calendar_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                tools:text="Fri, July 06, 2018"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_calendar_open_icon"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_calendar_icon"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_event_available_black_24dp"/>

        <LinearLayout
            android:id="@+id/ll_calendar_to"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginStart="72dp"
            app:layout_constraintTop_toBottomOf="@id/ll_calendar_from"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_calendar_to_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="start|center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/colorAccent"
                android:alpha="0.7"
                android:text="check out"/>

            <TextView
                android:id="@+id/tv_calendar_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                tools:text="Wed, July 11, 2018"/>
        </LinearLayout>

        <View
            android:id="@+id/v_separator2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:layout_marginStart="72dp"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/ll_calendar_to"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_separator2"
            android:layout_marginStart="16dp"
            android:alpha="0.7"
            android:src="@drawable/ic_group_black_24dp"/>

        <TextView
            android:id="@+id/tv_type_text"
            android:layout_width="0dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="@id/iv_type_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="72dp"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            tools:text="Random"/>

        <ImageView
            android:id="@+id/iv_type_info"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_separator2"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_info_black_24dp"/>

        <View
            android:id="@+id/v_separator3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:layout_marginStart="72dp"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/iv_type_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_price_icon"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_separator3"
            android:layout_marginStart="16dp"
            android:alpha="0.7"
            android:src="@drawable/ic_monetization_on_black_24dp"/>

            <TextView
                android:id="@+id/tv_price_text_total"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginStart="72dp"
                app:layout_constraintTop_toBottomOf="@id/v_separator3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                tools:text="U$5,000,00"/>

        <View
            android:id="@+id/v_separator4"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:layout_marginStart="72dp"
            android:alpha="0.5"
            android:layout_marginBottom="88dp"
            app:layout_constraintTop_toBottomOf="@id/tv_price_text_total"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
