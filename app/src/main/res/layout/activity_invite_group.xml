<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_close_white_24dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="Invite Group"
        app:subtitle="5 friends"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_friend_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp" >
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_friend1_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_friend_1"
        app:layout_constraintTop_toTopOf="@id/iv_friend_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_friend_1"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="friend 1"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_friend_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_friend_1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp" >
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_friend2_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_friend_2"
        app:layout_constraintTop_toTopOf="@id/iv_friend_2"
        app:layout_constraintBottom_toBottomOf="@id/iv_friend_2"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="friend 2"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_friend_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_friend_2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp" >
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_friend3_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_friend_3"
        app:layout_constraintTop_toTopOf="@id/iv_friend_3"
        app:layout_constraintBottom_toBottomOf="@id/iv_friend_3"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="friend 3"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_friend_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_friend_3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp" >
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_friend4_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_friend_4"
        app:layout_constraintTop_toTopOf="@id/iv_friend_4"
        app:layout_constraintBottom_toBottomOf="@id/iv_friend_4"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="friend 4"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_friend_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_friend_4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp" >
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_friend5_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_friend_5"
        app:layout_constraintTop_toTopOf="@id/iv_friend_5"
        app:layout_constraintBottom_toBottomOf="@id/iv_friend_5"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="friend 5"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_check_white_24dp" />

</android.support.constraint.ConstraintLayout>