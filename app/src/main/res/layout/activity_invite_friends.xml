        app:layout_constraintBottom_toBottomOf="@id/iv_friend_9"
        app:layout_constraintStart_toStartOf="@id/gl_vertical"
        android:gravity="end"
        android:layout_marginEnd="16dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="friend 9"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_friend_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_friend_9"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp" >
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_friend10_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/iv_friend_10"
