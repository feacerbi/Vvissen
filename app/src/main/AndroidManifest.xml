<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vvissen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MyTripsActivity"
            android:label="@string/title_activity_my_trips"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.HousesActivity"
            android:label="@string/title_activity_houses"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.HouseDetailsActivity"
            android:label="@string/title_activity_house_details"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vvissen.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.MatchActivity"
            android:label="@string/title_activity_match"
            android:theme="@style/AppTheme" />
    </application>

</manifest>